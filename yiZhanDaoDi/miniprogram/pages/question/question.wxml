
<!--pages/question/question.wxml-->


<view class='background'>
<scroll-view>
  <view class='timuziti'>{{postList[index].name}}</view>
  <view hidden="{{ny}}">{{postList[index].daan}}</view>
</scroll-view>
<scroll-view>
  <button href="#" id='A' bindtap="btnOpClick" style="background-color: {{bcA}};" disabled="{{but}}">{{postList[index].content[0]}}</button>
  <button href="#" id='B' bindtap="btnOpClick" style="background-color: {{bcB}};" disabled="{{but}}">{{postList[index].content[1]}}</button>
  <button href="#" id='C' bindtap="btnOpClick" style="background-color: {{bcC}};" disabled="{{but}}">{{postList[index].content[2]}}</button>
  <button  href="#" id='D' bindtap="btnOpClick" style="background-color: {{bcD}};" disabled="{{but}}">{{postList[index].content[3]}}</button>
</scroll-view>
<button class="push_button red" href="#" bindtap="lastQuestion">上一题</button>

<button class="push_button orange" href="#" bindtap="nextQuestion" disabled="{{next}}">下一题</button>

<text class='jifenziti'>积分：每答对一题积2分，目前得分{{defen}}</text>

</view>