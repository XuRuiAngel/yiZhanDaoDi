/* pages/data_inner/data_inner.wxss */
.tui-picker-content{
  padding: 30rpx;
  text-align: center;
}
.tui-picker-name{
  height: 80rpx;
  line-height: 80rpx;
}
.tui-picker-detail{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  font-size: 35rpx;
  padding: 0 10px;
  overflow: hidden;
}

.container{
  width: 100%;
  margin-top: 20rpx;
  background-color: #008B8B;
  color:#FFE4B5;
  display: flex;
  align-items: center;
  justify-content: center;
}
.c{
  width: 100%;

  align-items: center;
  justify-content: center;
}
.but{
  text-shadow:-1px -1px 0 #3f3d3d;
	background: #FFA07A;
	border:1px solid#FFA07A;
	
	background-image:-webkit-linear-gradient(top,  rgb(250, 187, 162), #FFA07A);
	background-image:-moz-linear-gradient(top,  rgb(250, 187, 162)c, #FFA07A);
	background-image:-ms-linear-gradient(top,  rgb(250, 187, 162), #FFA07A);
	background-image:-o-linear-gradient(top,  rgb(250, 187, 162), #FFA07A);
	background-image:linear-gradient(to bottom,  rgb(250, 187, 162), #FFA07A);
	
	-webkit-border-radius:5px;
	-moz-border-radius:5px;
	border-radius:5px;
	
	-webkit-box-shadow:0 1px 0 rgba(255, 255, 255, .5) inset, 0 -1px 0 rgba(255, 255, 255, .1) inset, 0 4px 0 #FFA07A, 0 4px 2px rgba(0, 0, 0, .5);
	-moz-box-shadow:0 1px 0 rgba(255, 255, 255, .5) inset, 0 -1px 0 rgba(255, 255, 255, .1) inset, 0 4px 0 #FFA07A, 0 4px 2px rgba(0, 0, 0, .5);
	box-shadow:0 1px 0 rgba(255, 255, 255, .5) inset, 0 -1px 0 rgba(255, 255, 255, .1) inset, 0 4px 0 #FFA07A, 0 4px 2px rgba(0, 0, 0, .5);
}
.but:hover{
  background: #3f3d3d;
	background-image:-webkit-linear-gradient(top, #FFA07A,  rgb(250, 187, 162));
	background-image:-moz-linear-gradient(top, #FFA07A,  rgb(250, 187, 162));
	background-image:-ms-linear-gradient(top, #FFA07A,  rgb(250, 187, 162));
	background-image:-o-linear-gradient(top, #FFA07A, rgb(250, 187, 162) );
	background-image:linear-gradient(top, #FFA07A, rgb(250, 187, 162));
}

