.userinfo {
  position: relative;
  width: 100%;
  height: 320rpx;
  color: #000;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color:  #008B8B;
}
 
.userinfo-avatar {
  overflow:hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #a0deee;
  box-shadow: 3px 3px 10px #FFA07A;
}
 
.userinfo text {
  /* color: #fff; */
  font-size: 14px;
  background-color: #008B8B;
  border-radius:40%;
}
.all{
  background-color: #008B8B;
  height: 100%;
  width: 100%
}
.but{
  color:#fff;
  text-shadow:-1px -1px 0 #3f3d3d;
	background: rgb(141, 141, 140);
	border:1px solid rgb(141, 141, 140);
  width: 50%;
	
	background-image:-webkit-linear-gradient(top,  rgb(231, 230, 229), rgb(141, 141, 140));
	background-image:-moz-linear-gradient(top,  rgb(231, 230, 229)c, rgb(141, 141, 140));
	background-image:-ms-linear-gradient(top,  rgb(231, 230, 229), rgb(141, 141, 140));
	background-image:-o-linear-gradient(top,  rgb(231, 230, 229), rgb(141, 141, 140));
	background-image:linear-gradient(to bottom,  rgb(231, 230, 229), rgb(141, 141, 140));
	
	-webkit-border-radius:5px;
	-moz-border-radius:5px;
	border-radius:5px;
	
	-webkit-box-shadow:0 1px 0 rgba(255, 255, 255, .5) inset, 0 -1px 0 rgba(255, 255, 255, .1) inset, 0 4px 0 rgb(141, 141, 140), 0 4px 2px rgba(0, 0, 0, .5);
	-moz-box-shadow:0 1px 0 rgba(255, 255, 255, .5) inset, 0 -1px 0 rgba(255, 255, 255, .1) inset, 0 4px 0 rgb(141, 141, 140), 0 4px 2px rgba(0, 0, 0, .5);
	box-shadow:0 1px 0 rgba(255, 255, 255, .5) inset, 0 -1px 0 rgba(255, 255, 255, .1) inset, 0 4px 0 rgb(141, 141, 140), 0 4px 2px rgba(0, 0, 0, .5);
}
.but:hover{
  background: #fff;
	background-image:-webkit-linear-gradient(top, rgb(141, 141, 140),  rgb(231, 230, 229));
	background-image:-moz-linear-gradient(top, rgb(141, 141, 140),  rgb(231, 230, 229));
	background-image:-ms-linear-gradient(top, rgb(141, 141, 140),  rgb(231, 230, 229));
	background-image:-o-linear-gradient(top, rgb(141, 141, 140), rgb(231, 230, 229) );
	background-image:linear-gradient(top, rgb(141, 141, 140), rgb(231, 230, 229));
}
.photo{
   align-items: center;
   justify-content: center;
   width:70%;
   padding-left: 110rpx;
   
}